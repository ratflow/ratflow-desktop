# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec terminator -p ratflow-terminator

# start dmenu (a program launcher)
#bindsym $mod+d exec dmenu_run
#bindsym Mod1+F2 exec dmenu_run

#let's replace dmenu by rofi (or else):
bindsym $mod+d exec $resources/scripts/app_launcher
bindsym Mod1+F2 exec $resources/scripts/app_launcher

# screenshots (full, region, active)
bindsym Print exec screengrab --fullscreen
bindsym Shift+Print exec screengrab --region
bindsym Control+Print exec screengrab --active

# region app assigned to current workspace
bindsym $mod+Shift+a exec $autoappScript

# calendar
bindsym $mod+c exec gsimplecal

# translation of selected text (polish <-> english)
bindsym $mod+t exec notify-send -t 20000 "Selected text translation EN->PL:\n\n`$resources/scripts/translate-shell -b :pl \"$(xsel)\"`"
bindsym $mod+Shift+t exec notify-send -t 20000 "Selected text translation PL->EN:\n\n`$resources/scripts/translate-shell -b -s pl \"$(xsel)\"`"

# redshift
bindsym $mod+Control+Next exec $resources/scripts/redshift-adjust -100
bindsym $mod+Control+Prior exec $resources/scripts/redshift-adjust +100
bindsym $mod+Control+l exec bash -c 'pgrep redshift && killall redshift || redshift'
