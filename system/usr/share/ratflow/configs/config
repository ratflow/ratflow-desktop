#------------------------------------------------
#
# autostart - login command execution
#
#------------------------------------------------

# ensure that notification daemon is running
exec dunst

# run window composer (with 2ms per step while faiding)
exec compton -f -D 2

# enable touchpad with tapping and two-finger scroll
exec synclient TouchpadOff=0
exec synclient TapButton1=1
exec synclient VertTwoFingerScroll=1
exec synclient VertHysteresis=30
exec synclient HorizHysteresis=30

# tune down screen colors with redshift
exec redshift -l 52.43:15.15 -m randr

# run network manager
exec nm-applet

# run clipboard manager
exec clipit

# run bluetooth manager
#exec blueman-applet

